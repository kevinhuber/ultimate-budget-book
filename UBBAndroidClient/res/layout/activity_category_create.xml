<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+CategoryCreateLayout/contentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+CategoryCreateLayout/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/title_bottom_border"
        android:layout_marginTop="@dimen/default_top_border"
        android:text="@string/createCategoryTitle"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+CategoryCreateLayout/formContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_border"
        android:layout_marginRight="@dimen/default_border" >

        <TableRow
            android:id="@+CategoryCreateLayout/nameContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+CategoryCreateLayout/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/default_border"
                android:text="@string/t_anzeigename"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+CategoryCreateLayout/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+CategoryCreateLayout/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_border"
        android:layout_marginRight="@dimen/default_border"
        android:layout_marginTop="@dimen/default_top_border"
        android:text="@string/b_categorie_create" />

</LinearLayout>