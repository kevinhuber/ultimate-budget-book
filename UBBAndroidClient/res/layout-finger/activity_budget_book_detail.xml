<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UselessParent" >

    <ViewFlipper
        android:id="@+BudgetBook/details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+BudgetBook/daylinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+BudgetBook/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_bottom_border"
                android:layout_marginTop="@dimen/default_top_border"
                android:text="@string/title_dayView"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+BudgetBookDetails/addEntry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_border"
                android:layout_marginRight="@dimen/default_border"
                android:text="@string/b_add"
                android:textSize="12dp" />

            <ListView
                android:id="@+BudgetBook/bookings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_border"
                android:layout_marginRight="@dimen/default_border" />

        </LinearLayout>

        <LinearLayout
            android:id="@+BudgetBook/weeklinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+BudgetBook/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_bottom_border"
                android:layout_marginTop="@dimen/default_top_border"
                android:text="@string/title_weekView"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+BudgetBookDetails/addEntry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_border"
                android:layout_marginRight="@dimen/default_border"
                android:text="@string/b_add"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+BudgetBook/monthlinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+BudgetBook/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_bottom_border"
                android:layout_marginTop="@dimen/default_top_border"
                android:text="@string/title_monthView"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+BudgetBookDetails/addEntry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_border"
                android:layout_marginRight="@dimen/default_border"
                android:text="@string/b_add"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+BudgetBook/yearlinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+BudgetBook/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_bottom_border"
                android:layout_marginTop="@dimen/default_top_border"
                android:text="@string/title_yearView"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+BudgetBookDetails/addEntry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_border"
                android:layout_marginRight="@dimen/default_border"
                android:text="@string/b_add"
                android:textSize="12dp" />

        </LinearLayout>
    </ViewFlipper>

</LinearLayout>